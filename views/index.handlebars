<div class="uk-container-medium uk-text-center uk-margin-medium-left uk-margin-large-right">
  {{> nav }}
  <ul>
    {{#each articles}}
      <li>
        <div class="uk-card uk-card-default uk-card-small uk-grid-collapse uk-child-width-1-2@s uk-margin uk-grid-row-medium" data-id="{{_id}}" uk-grid>
          <div class="uk-card-media-left uk-cover-container">
            <img src={{image}} alt="" uk-cover>
          </div>
          <div>
            <div class="uk-card-body">
              <h3 class="uk-card-title"><strong>{{headline}}</strong></h3>
              <p><i>{{summary}}</i></p>
              <div class="uk-card-footer">
                <a href="{{URL}}" class="uk-button uk-button-text">Go to full article.</a>
              </div>
              <div class="uk-button-group">
                <button class="uk-button uk-button-default" id="save-article" type="button">Save Article</button>
                <button class="uk-button uk-button-default" type="button" uk-toggle="target: #a-modal">Create Note</button>
                {{!-- button class="uk-button uk-button-default" id="view" type="button" uk-toggle="target: #b-modal">View Note(s)</button> --}}
              </div>
            </div>
          </div>
        </div>

      </li>
    {{/each}}
  </ul>
</div>

{{> modalInput }}
{{> modalOutput }}
