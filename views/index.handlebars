
<div class="uk-container uk-text-center">
  <h1>News Scrapes</h1>

  <ul>
    {{#each articles}}
      <li>
        <br>
        <div class="uk-child-width-1-1 uk-grid-collapse" uk-grid>
          <hr>
          <div class="uk-inline">
            <img src="{{this.image}}" class="uk-position-middle-left" alt="{{this.URL}}">
            <div class="uk-text-top text">
              <p><strong>{{this.headline}}</strong></p>
              <p><i>{{this.summary}}</i></p>
              <a href="{{this.URL}}"><p>Article Link</p></a>
              <p>{{this.when}}</p>
            </div>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
</div>